<div>
    {{> header}}
    <hr>
    <div id="content">
        {{> favorite}}
        <!-- MAIN HERE, use #each data -->
        <main>
            <h1 id="store-name">{{title}}</h1>
            <a href="https://www.facebook.com/ThriftApparelMNL">Facebook</a>
            <a href="https://www.instagram.com/thrift.apparelmnl/">Instagram</a>
            {{#if is_fav}}
            <form action="remove-fav" method="post">
                <input type="hidden" name="store-name" value{{title}}>
                <button type="submit" class="btn">Add to Favorites</button>
            </form>
            {{else}}
            <form action="add-fav" method="post">
                <input type="hidden" name="store-name" value={{title}}>
                <button type="submit" class="btn">Add to Favorites</button>
            </form>
            {{/if}}
            {{#each post_data}}
                <div class="post-card">
                    <h2>{{post_user}}</h2>
                    <h1>{{post_title}}</h1>
                    <p>{{post_content}}</p>
                </div>
            {{/each}}
        </main>
        {{> sidebar}}
</div>
